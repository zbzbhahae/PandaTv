<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--取消上方的actoinbar-->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>



    <declare-styleable name="BottomNavigationItem">
        <attr name="item_drawable" format="reference"/>
        <attr name="item_text" format="string"/>
        <attr name="item_text_color" format="color"/>
        <attr name="item_text_checked_color" format="color"/>
        <attr name="item_text_size" format="dimension"/>
    </declare-styleable>
</resources>
